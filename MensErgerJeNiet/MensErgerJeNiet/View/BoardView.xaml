<Window x:Name="BoardWindow" x:Class="MensErgerJeNiet.View.BoardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BoardView" SizeToContent="WidthAndHeight" ResizeMode="NoResize" KeyDown="BoardWindow_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Red" BorderThickness="4">
            <Grid x:Name="FieldsGrid" Grid.Row="0">
                <Grid.Background>
                    <SolidColorBrush Color="#FFFFA6" />
                </Grid.Background>
            </Grid>
        </Border>
        <Grid Name="TurnView" Grid.Row="1" Height="auto" Background="LightGray">
            <Label Margin="10,0,0,0">Aan de beurt:</Label>
            <Label Margin="210,0,0,0"/>
            <Label Margin="130,0,0,0"></Label>
            <Label x:Name="TurnLabel" Margin="110,0,0,0" />
        </Grid>
    </Grid>
</Window>
